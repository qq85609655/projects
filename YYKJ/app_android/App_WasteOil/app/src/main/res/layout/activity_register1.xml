<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context=".Register1">

    <include
        layout="@layout/activity_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/formline">

                <TextView
                    style="@style/formdd"
                    android:text="申请人：" />

                <EditText
                    style="@style/formdt"
                    android:hint="请填写姓名"
                    android:id="@+id/ContactName"/>
            </LinearLayout>

            <View
                style="@style/formlineh" />

            <LinearLayout
                style="@style/formline">

                <TextView
                    style="@style/formdd"
                    android:text="联系手机：" />

                <EditText
                    style="@style/formdt"
                    android:hint="请填写手机号"
                    android:id="@+id/ContactMobile"/>
            </LinearLayout>

            <View
                style="@style/formlineh"/>

            <LinearLayout
                style="@style/formline">

                <TextView
                    style="@style/formdd"
                    android:text="电子邮箱：" />

                <EditText
                    style="@style/formdt"
                    android:hint="请填写电子邮箱"
                    android:id="@+id/ContactEmail"/>
            </LinearLayout>

            <View
                style="@style/formlineh" />

            <LinearLayout
                style="@style/formline">

                <TextView
                    style="@style/formdd"
                    android:text="联系地址：" />

                <EditText
                    style="@style/formdt"
                    android:hint="请填写联系地址"
                    android:id="@+id/ContactAddress"/>
            </LinearLayout>

            <View
                style="@style/formlineh" />
            <LinearLayout style="@style/formline">
                <TextView style="@style/formdd"
                    android:text="企业全称：" />
                <EditText style="@style/formdt"
                    android:hint="企业全称"
                    android:id="@+id/ComFullName"/>
            </LinearLayout>
            <TextView style="@style/forminputinfo"
                android:text="请填写工商营业执照上的企业全称（认证通过后且无法修改）。  只支持中国大陆工商局或市场监督管理局登记的企业。"/>
            <View style="@style/formlineh" />


            <LinearLayout style="@style/formline">
                <TextView style="@style/formdd"
                    android:text="工商营业执照类型：" />
                <RadioGroup
                    android:id="@+id/BusinessLicenseType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1" >
                <RadioButton
                    android:text="一照一码"
                    style="@style/formdtRadioButton"
                    android:id="@+id/BusinessLicenseType1"
                    android:checked="true"/>

                <RadioButton
                    android:text="三证合一"
                    android:id="@+id/BusinessLicenseType2"
                    style="@style/formdtRadioButton"/>

                <RadioButton
                    android:text="五证合一"
                    android:id="@+id/BusinessLicenseType3"
                    style="@style/formdtRadioButton"/>
                </RadioGroup>
            </LinearLayout>

            <TextView
                style="@style/forminputinfo"
                android:text="工商局颁发的工商营业执照类型。"/>

            <View style="@style/formlineh" />


            <LinearLayout style="@style/formline">
                <TextView style="@style/formdd"
                    android:text="工商执照注册号：" />
                <EditText
                    style="@style/formdt"
                    android:hint="请填写工商营业执照上的注册号。 "
                    android:id="@+id/BusinessLicenseNumber"
                    />
            </LinearLayout>

            <View style="@style/formlineh" />


            <LinearLayout style="@style/formline">
                <TextView style="@style/formdd"
                    android:text="工商营业执照地址：" />
                <EditText
                    style="@style/formdtMultiLine"
                    android:hint="请填写工商营业执照上的注册地址。 "
                    android:id="@+id/BusinessLicenseAddress"/>
            </LinearLayout>

            <View style="@style/formlineh" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/OrganizationCodeNumberloyout">
            <LinearLayout style="@style/formline" >
                <TextView style="@style/formdd"
                    android:text="组织机构代码：" />
                <EditText
                    style="@style/formdt"
                    android:hint="请填写组织机构代码证上的代码。 "
                    android:id="@+id/OrganizationCodeNumber"
                    />
            </LinearLayout>

            <View style="@style/formlineh" />
    </LinearLayout>
            <LinearLayout style="@style/formline">
                <TextView style="@style/formdd"
                    android:text="法定代表人：" />
                <EditText style="@style/formdt"
                    android:id="@+id/LegalRepresentative"
                    />
            </LinearLayout>

            <TextView style="@style/forminputinfo"
                android:text="请填写工商营业执照上的法定代表人/企业负责人姓名。 "/>

            <View style="@style/formlineh" />

            <LinearLayout style="@style/formline">
                <TextView style="@style/formdd"
                    android:text="经营范围：" />
                <EditText
                    style="@style/formdtMultiLine"
                    android:hint="请填写工商营业执照上的经营范围。"
                    android:id="@+id/BusinessScope"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>