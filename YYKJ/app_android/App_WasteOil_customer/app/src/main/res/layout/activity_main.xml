<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@color/main_backgroud"
    tools:context="com.eyunsoft.app_wasteoilCostomer.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/main_backgroud" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="当前通知状态："
            android:id="@+id/textView"
            android:lines="1" />

        <Switch
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="已关闭"
            android:textOn="已开启"
            android:checked="false"
            android:id="@+id/receiveStatus" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"

        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1" >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="危废生产单"
                android:id="@+id/btnProRec"
                android:textColor="@color/white"
                android:background="@drawable/bg_special_disease_circle" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="危废转运联单"
                android:textColor="@color/white"
                android:id="@+id/btnProdRecReport"
                android:background="@drawable/bg_special_disease_circle" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="危废联单发布"
                android:id="@+id/btnTranRecAccept"
                android:textColor="@color/white"
                android:background="@drawable/bg_special_disease_circle" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="调度配送"
                android:textColor="@color/white"
                android:background="@drawable/bg_special_disease_circle"
                android:id="@+id/btnVehDisp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知管理"
                android:textColor="@color/white"
                android:id="@+id/btnNotice"
                android:background="@drawable/bg_special_disease_circle" />

        </LinearLayout>



    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_height="25dp">


        <TextView
            android:text="当前站点:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:text="城东路"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtComBrName"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />

        <TextView
            android:text="员工姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:text="张三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserFullname"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />

        <TextView
            android:text="登录帐号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <TextView
            android:text="410105014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserName"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>

