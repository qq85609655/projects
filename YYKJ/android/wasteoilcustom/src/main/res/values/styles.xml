<resources>
    <style name="matchwh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="wrapwh">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="single_edit">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ff444444</item>
        <item name="android:textColorHint">#ffc8c8cd</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_dis_bgs</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="content_main" parent="matchwh">
        <item name="android:background">?android:attr/colorControlHighlight</item>
        <item name="android:orientation">vertical</item>


    </style>
    <style name="content_main_linear" parent="matchwh">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>
