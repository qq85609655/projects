<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.yiyun.wasteoilcustom.activities.Menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
    style="@style/content_main"
    android:baselineAligned="false">

        <LinearLayout
        android:orientation="horizontal"
        style="@style/content_main_linear"
        android:background="@android:color/holo_blue_light">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_back"
            android:id="@+id/returnAction"
            android:scaleType="center"
            android:visibility="invisible"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textSize="18dp"
            android:textColor="#ff444444"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:elevation="0dp" />

    </LinearLayout>


            <TextView
                android:textSize="18dp"
                android:textColor="#ff444444"
                android:layout_height="100dp"
                android:text="@string/product"
                android:background="@android:color/holo_orange_light"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:onClick="product"
                android:gravity="center_vertical" />
            <TextView
                android:textSize="18dp"
                android:textColor="#ff444444"
                android:layout_height="100dp"
                android:text="@string/schedule"
                android:background="@android:color/holo_orange_light"
                android:layout_width="200dp"
                android:layout_margin="10dp"
               android:layout_gravity="right"
                android:onClick="schedule"
                android:gravity="center_vertical" />
             <TextView
                android:textSize="18dp"
                android:textColor="#ff444444"
                android:layout_height="100dp"
                android:text="@string/recReport"
                 android:layout_margin="10dp"
                 android:onClick="recReport"
                android:background="@android:color/holo_orange_light"
                android:layout_width="200dp"
                android:gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"

        android:background="@android:color/background_light"
        android:layout_height="30dp">
        <TextView
            android:text="当前站点:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@color/colorAccent"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtComBrName"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />

        <TextView
            android:text="员工姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textColor="@color/colorAccent"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserFullname"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />

        <TextView
            android:text="登录帐号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textColor="@color/colorAccent"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserName"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>