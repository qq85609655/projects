<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.yiyun.wasteoilcustom.activities.Menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?android:attr/textColorLink">

            <LinearLayout
            android:orientation="horizontal"
                android:layout_height="50dp"
                android:layout_width="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_white"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp" />
                <TextView
                android:textSize="18dp"
                android:textColor="#ff444444"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                    android:layout_weight="1"
                android:elevation="0dp" />

                <TextView
                    android:text="注销"
                  android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logout" />


            </LinearLayout>

            <include
                layout="@layout/view_line_horizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white_light_40"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="系统通知"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black_overlay"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="无"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@drawable/selector_textcolor_white_grey"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/content_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="product"
                    android:layout_margin="1dp"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/prod" />

                    <TextView
                        android:textSize="18dp"
                        android:textColor="#ff444444"
                        android:layout_height="wrap_content"
                        android:text="@string/product"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="1dp"
                    android:paddingTop="5dp"
                    android:onClick="recReport"
                    android:layout_weight="1">

                    <ImageView
                    android:layout_width="match_parent"
                        android:src="@drawable/report"
                    android:id="@+id/returnAction"
                        android:layout_height="50dp" />

                    <TextView
                        android:textSize="18dp"
                        android:textColor="#ff444444"
                        android:layout_height="wrap_content"
                        android:text="@string/recReport"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"

        android:background="@android:color/background_light"
        android:layout_height="30dp">
        <TextView
            android:text="当前站点:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@color/colorAccent"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtComBrName"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />

        <TextView
            android:text="员工姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textColor="@color/colorAccent"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserFullname"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />

        <TextView
            android:text="登录帐号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textColor="@color/colorAccent"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserName"
            android:textColor="@color/black_overlay"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>